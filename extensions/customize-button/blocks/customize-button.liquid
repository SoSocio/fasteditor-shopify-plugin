<script src="{{ 'fasteditor-cart-handler.js' | asset_url }}" defer></script>
{% assign font = block.settings.text_font %}

<style>
  {{ font | font_face }}

  /* Styles scoped by unique block class to avoid conflicts */
  .block-{{ block.id }} {
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-family: {{ font.family }},{{ font.fallback_families }};
    border-width: {{ block.settings.border_width }}px;
    border-color: {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    --icon-gap: {{ block.settings.icon_gap | default: 8 }}px;
  }
</style>

{% if request.design_mode or product.tags contains "fasteditor" %}
  <div class="fasteditor">
    <button
      id="fasteditor-{{ block.id }}"
      class="fasteditor__button block-{{ block.id }} {% if block.settings.icon_position == 'right' %}fasteditor__button--icon-right{% endif %}"
      data-shop="{{ shop.permanent_domain }}"
      data-handle="{{ product.handle }}"
      data-availability="{{ app.metafields.fasteditor_app.availability }}"
      data-redirect="{{ block.settings.enable_cart_redirect }}"
      data-loading-text="{{ block.settings.loading_text | escape }}"
      data-adding-to-cart-text="{{ block.settings.adding_to_cart_text | escape }}"
      data-added-to-cart-text="{{ block.settings.added_to_cart_text | escape }}"
      data-error-text="{{ block.settings.error_text | escape }}"
      aria-label="{{ block.settings.text | escape }}"
      type="button"
    >
      {% if block.settings.icon_type != 'none' %}
        <span class="fasteditor__button-icon">
          <span class="fasteditor__button-icon-main">
            {% render 'icon-button',
              icon: block.settings.icon_type,
              icon_color: block.settings.icon_color,
              icon_size: block.settings.icon_size,
              icon_custom_image: block.settings.icon_custom_image
            %}
          </span>
          <span class="fasteditor__button-icon-loading" style="display: none;">
            {% render 'icon-loading', color: block.settings.icon_color, size: block.settings.icon_size %}
          </span>
        </span>
      {% endif %}
      <span class="fasteditor__button-text">{{ block.settings.text }}</span>
    </button>
  </div>
{% endif %}

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    const button = document.querySelector("#fasteditor-{{ block.id }}");
    if (!button) return;

    const button_availability = button.dataset.availability;
    if (button_availability === "false") {
       button.setAttribute("disabled", "true")
       return;
    }

    const textElement = button.querySelector('.fasteditor__button-text');
    const originalText = textElement ? textElement.textContent : button.textContent;

    button.addEventListener("click", () => {
      handleFastEditorRedirect(button, originalText);
    });

    await handleFastEditorAutoAddToCart(button);
  });
</script>

{% schema %}
{
  "name": "FastEditor Button",
  "target": "section",
  "available_if": "{{ app.metafields.fasteditor_app.paid }}",
  "enabled_on": {
    "templates": [
      "product"
    ]
  },
  "stylesheet": "customize-button.css",
  "javascript": "customize-button.js",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Button background color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Button text",
      "default": "Customize"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 8,
      "max": 64,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "font_picker",
      "id": "text_font",
      "label": "Text font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 99,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 0
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 99,
      "step": 1,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "enable_cart_redirect",
      "default": true,
      "label": "Redirect to cart page after adding to cart"
    },
    {
      "type": "header",
      "content": "Button State Texts"
    },
    {
      "type": "text",
      "id": "loading_text",
      "label": "Loading text",
      "default": "Loading...",
      "info": "Text shown when button is loading"
    },
    {
      "type": "text",
      "id": "adding_to_cart_text",
      "label": "Adding to cart text",
      "default": "Adding to cart...",
      "info": "Text shown when adding item to cart"
    },
    {
      "type": "text",
      "id": "added_to_cart_text",
      "label": "Added to cart text",
      "default": "Added to cart",
      "info": "Text shown after item is added to cart"
    },
    {
      "type": "text",
      "id": "error_text",
      "label": "Error text",
      "default": "Error",
      "info": "Text shown when an error occurs"
    }
    {
      "type": "select",
      "id": "icon_type",
      "label": "Icon type",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "pen",
          "label": "Pen"
        },
        {
          "value": "brush",
          "label": "Brush"
        },
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "images",
          "label": "Images"
        },
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "settings",
          "label": "Settings"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "none"
    },
    {
      "type": "image_picker",
      "id": "icon_custom_image",
      "label": "Custom icon image",
      "info": "Only applies when 'Custom' icon type is selected"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#ffffff",
      "info": "Only applies to built-in icons"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 8,
      "max": 64,
      "step": 1,
      "unit": "px",
      "label": "Icon size",
      "default": 20,
      "info": "Only applies when icon is selected"
    },
    {
      "type": "range",
      "id": "icon_gap",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Icon gap",
      "default": 8,
      "info": "Distance between icon and text"
    },
    {
      "type": "select",
      "id": "icon_position",
      "label": "Icon position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "info": "Only applies when icon is selected"
    }
  ]
}
{% endschema %}
