// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model ShopSettings {
  id                           String    @id @default(cuid())
  shop                         String    @unique // Shopify shop domain (e.g. myshop.myshopify.com)
  shopifySubscriptionId        String?
  subscriptionStatus           String?
  subscriptionCurrentPeriodEnd DateTime?
  fastEditorApiKey             String?
  fastEditorDomain             String? // Should be in format {{your_brand}}.staging.fasteditor.com
  createdAt                    DateTime  @default(now())
  updatedAt                    DateTime  @updatedAt
  language                     String?
  country                      String?
  currency                     String?
}

model FastEditorOrderItems {
  id         String    @id @default(cuid())
  shop       String
  orderId    String
  orderName  String
  lineItemId String
  quantity   Int
  unitPrice  Float
  projectKey Int
  productId  String
  variantId  String?
  createdAt  DateTime  @default(now())
  usageFee   Float
  billed     Boolean   @default(false)
  billedAt   DateTime?

  @@unique([shop, orderId, lineItemId])
  @@index([shop])
}
